<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Tab3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unusual Activity in Neighbourhood"
            android:textSize="30dp"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="serif"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/text"
                android:layout_above="@id/navigation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/nborName"
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:hint="Neighbour's name"/>

                    <EditText
                        android:id="@+id/address"
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:layout_marginLeft="50dp"
                        android:hint="Address"/>

                    <EditText
                        android:id="@+id/city"
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:layout_marginLeft="50dp"
                        android:hint="City"/>

                    <EditText
                        android:id="@+id/state"
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:layout_marginLeft="50dp"
                        android:hint="State"/>

                    <CheckBox android:id="@+id/chk1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Individual impact?"
                        />

                    <CheckBox android:id="@+id/chk2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Societal impact?"
                        />

                    <CheckBox android:id="@+id/chk3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Is human life at stake?"
                        />

                    <CheckBox android:id="@+id/chk4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Urgent action required?"
                        />

                    <EditText
                        android:id="@+id/info"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="50dp"
                        android:hint="Explain the unusual activity"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:text="SUBMIT"
                            android:layout_marginLeft="130dp"
                            android:padding="10dp"
                            android:layout_marginBottom="80dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/green"/>

                    </LinearLayout>

                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/testData"
                        android:textSize="20dp"
                        android:layout_marginBottom="100dp"/>
                    -->
                </LinearLayout>

            </FrameLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />
    </RelativeLayout>

</LinearLayout>